                        android:layout_marginTop="@dimen/dialog_box_text_margin"
                        android:layout_marginBottom="@dimen/dialog_box_text_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/avatar_t3"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Диалог Лука-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@drawable/linear_layout_radius"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/dialog_box_padding"
                    android:paddingEnd="@dimen/dialog_box_padding"
                    android:layout_marginBottom="@dimen/lesson_text_margin"
