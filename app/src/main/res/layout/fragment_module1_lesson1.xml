<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Module1Lesson1Fragment"
    android:id="@+id/fragment_module1_lesson1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lesson1"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="45sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"/>

            <LinearLayout
                android:background="@drawable/main_dialog_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/lesson_text_margin"
                android:layout_marginRight="@dimen/lesson_text_margin"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginBottom="@dimen/lesson_text_margin"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ТЕСТ"
                    android:drawableLeft="@drawable/ic_baseline_play_arrow"
                    android:id="@+id/test_music1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ТЕСТ"
                    android:drawableLeft="@drawable/ic_baseline_play_arrow"
                    android:id="@+id/test_music2"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="СТОП!"
                    android:drawableLeft="@drawable/ic_baseline_play_arrow"
                    android:id="@+id/test_music3"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lesson1_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_next_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="25dp"
                    android:text="@string/btn_next_lesson"
                    app:backgroundTint="#FF6E40" />
            </LinearLayout>
        </LinearLayout>
</androidx.core.widget.NestedScrollView>