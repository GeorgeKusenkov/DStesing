<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Module1Lesson13Fragment"
    android:id="@+id/fragment_module1_lesson13"
    android:background="#EA926C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EA926C">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lesson13"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="45sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"/>

        <LinearLayout
            android:background="@drawable/main_dialog_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/lesson_text_margin"
            android:layout_marginRight="@dimen/lesson_text_margin"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginBottom="@dimen/lesson_text_margin"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lesson13_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_next_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25dp"
                android:text="@string/btn_next_lesson"
                app:backgroundTint="#FF6E40" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>