<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_box_luka_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/green_200"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:layout_marginTop="@dimen/dialog_box_margin"
    android:layout_marginBottom="@dimen/dialog_box_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dialog_box_padding"
        android:paddingEnd="@dimen/dialog_box_padding">
            <TextView
                android:id="@+id/luka_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                android:text="@string/text3_c1_m1_l1"
                android:textSize="@dimen/lesson_text_size"
                android:layout_marginTop="@dimen/dialog_box_text_margin"
                android:layout_marginBottom="@dimen/dialog_box_text_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/avatar_in_lesson"
                android:layout_height="@dimen/avatar_in_lesson"
                android:layout_marginStart="@dimen/lesson_text_margin"
                android:layout_marginTop="@dimen/lesson_text_margin"
                android:layout_marginBottom="@dimen/lesson_text_margin"
                android:src="@drawable/avatar_luka"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/luka_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>