<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.dstesing.fragments.MainFragment"
        android:label="Школа Диджериду"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_moduleFragment"
            app:destination="@id/moduleFragment" />
        <action
            android:id="@+id/action_mainFragment_to_infoFragment"
            app:destination="@id/infoFragment" />
        <argument
            android:name="points"
            app:argType="integer" />
        <action
            android:id="@+id/action_mainFragment_to_userNameFragment"
            app:destination="@id/userNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/moduleFragment"
        android:name="com.example.dstesing.fragments.ModuleFragment"
        tools:layout="@layout/fragment_module">
        <action
            android:id="@+id/action_moduleFragment_to_LessonsModule1Fragment"
            app:destination="@id/lessonsModule1Fragment" />
        <action
            android:id="@+id/action_moduleFragment_to_LessonsModule2Fragment"
            app:destination="@id/lessonsModule2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/lessonsModule1Fragment"
        android:name="com.example.dstesing.fragments.LessonsModule1Fragment"
        tools:layout="@layout/fragment_module1_lessons">
        <action
            android:id="@+id/action_lessonsModule1Fragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <argument
            android:name="POSITION"
            app:argType="integer" />
        <action
            android:id="@+id/action_lessonsModule1Fragment_to_module1Lesson3Fragment"
            app:destination="@id/module1Lesson3Fragment" />
        <action
            android:id="@+id/action_lessonsModule1Fragment_to_module1Lesson2Fragment"
            app:destination="@id/module1Lesson2Fragment" />
        <action
            android:id="@+id/action_lessonsModule1Fragment_to_module1Lesson1Fragment"
            app:destination="@id/module1Lesson1Fragment" />
        <action
            android:id="@+id/action_lessonsModule1Fragment_to_module1Lesson4Fragment"
            app:destination="@id/module1Lesson4Fragment" />
        <action
            android:id="@+id/action_lessonsModule1Fragment_to_module1Lesson5Fragment"
            app:destination="@id/module1Lesson5Fragment" />
        <action
            android:id="@+id/action_lessonsModule1Fragment_to_module1Lesson6Fragment"
            app:destination="@id/module1Lesson6Fragment" />
    </fragment>
    <fragment
        android:id="@+id/lessonsModule2Fragment"
        android:name="com.example.dstesing.fragments.LessonsModule2Fragment"
        tools:layout="@layout/fragment_module2_lessons">
        <action
            android:id="@+id/action_lessonsModule2Fragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
        <argument
            android:name="POSITION"
            app:argType="integer" />
        <argument
            android:name="ID"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.dstesing.fragments.DetailsFragment"
        tools:layout="@layout/fragment_module1_lesson1">
        <argument
            android:name="POSITION"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.dstesing.fragments.InfoFragment"
        tools:layout="@layout/fragment_info">
        <argument
            android:name="points"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/userNameFragment"
        android:name="com.example.dstesing.fragments.UserNameFragment"
        android:label="fragment_user_name"
        tools:layout="@layout/fragment_user_name" >
        <action
            android:id="@+id/action_userNameFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/module1Lesson3Fragment"
        android:name="com.example.dstesing.fragments.Module1Lesson3Fragment"
        tools:layout="@layout/fragment_module1_lesson3">
        <argument
            android:name="POSITION"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/module1Lesson2Fragment"
        android:name="com.example.dstesing.fragments.Module1Lesson2Fragment"
        tools:layout="@layout/fragment_module1_lesson2">
        <argument
            android:name="POSITION"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/module1Lesson1Fragment"
        android:name="com.example.dstesing.fragments.Module1Lesson1Fragment"
        tools:layout="@layout/fragment_module1_lesson1">
        <argument
            android:name="POSITION"
            app:argType="integer" />
        <action
            android:id="@+id/action_module1Lesson1Fragment_to_module1Lesson2Fragment2"
            app:destination="@id/module1Lesson2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/module1Lesson4Fragment"
        android:name="com.example.dstesing.fragments.Module1Lesson4Fragment"
        tools:layout="@layout/fragment_module1_lesson4">
        <argument
            android:name="POSITION"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/module1Lesson5Fragment"
        android:name="com.example.dstesing.fragments.Module1Lesson5Fragment"
        tools:layout="@layout/fragment_module1_lesson5" >
        <argument
            android:name="POSITION"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/module1Lesson6Fragment"
        android:name="com.example.dstesing.fragments.Module1Lesson6Fragment">
        <argument
            android:name="POSITION"
            app:argType="integer" />
    </fragment>
</navigation>