                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/dialog_box_padding"
                    android:paddingEnd="@dimen/dialog_box_padding"
                    android:layout_marginBottom="@dimen/lesson_text_margin"
                    android:layout_marginTop="@dimen/lesson_text_margin">
                    <ImageView
                        android:id="@+id/avatar_t2"
                        android:layout_width="@dimen/avatar_in_lesson"
                        android:layout_height="@dimen/avatar_in_lesson"
                        android:layout_margin="@dimen/lesson_text_margin"
                        android:src="@drawable/avatar_meloman"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:text="@string/text1_c1_m1_l16"
                        android:layout_width="@dimen/dialog_box_text_height"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/lesson_text_size"
                        android:layout_marginTop="@dimen/dialog_box_text_margin"
                        android:layout_marginBottom="@dimen/dialog_box_text_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/avatar_t2"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--Основной текст-->
                <TextView
                    android:text="@string/text2_c1_m1_l16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
