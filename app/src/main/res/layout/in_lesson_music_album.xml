<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/lesson_color"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:layout_marginTop="@dimen/dialog_box_margin"
    android:layout_marginBottom="@dimen/dialog_box_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/lesson_text_margin">

        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:layout_margin="@dimen/lesson_text_margin"
            android:src="@drawable/listen_music1_c1_m1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text6_c1_m1_l16"
            android:textColor="#202020"
            android:textSize="15sp"
            android:layout_marginStart="@dimen/dialog_box_text_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/album_cover"
            app:layout_constraintTop_toTopOf="@+id/album_cover" />

        <TextView
            android:id="@+id/album_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text7_c1_m1_l16"
            android:textColor="#202020"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/album_cover"
            app:layout_constraintTop_toBottomOf="@+id/album_cover" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>